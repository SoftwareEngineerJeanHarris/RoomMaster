<UserControl x:Class="RoomMaster.Login.LoginUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoomMaster.Login"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Username:"/>
            <TextBox Name="UsernameTextBox" Width="200"/>
            <TextBlock Text="Password:" Margin="0,10,0,0"/>
            <PasswordBox Name="PasswordBox" Width="200"/>
            <Button Content="Login" Width="200" Margin="0,10,0,0" Click="LoginButton_Click"/>
        </StackPanel>
        <Label x:Name="banner" Background="DarkRed" Foreground="White" Content="Banner" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" HorizontalContentAlignment="Center" Visibility="Hidden"/>
    </Grid>
</UserControl>
